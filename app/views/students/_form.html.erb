<div class="ui large form">
  <%= form_with(model: student, local: true) do |form| %>
    <% if student.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

        <ul>
        <% student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <label>Name</label>
      <div class="two fields">
        <div class="field">
          <%= form.text_field :fname, id: :student_fname, :placeholder => 'First Name' %>
        </div>
        <div class="field">
          <%= form.text_field :lname, id: :student_lname, :placeholder => 'Last Name' %>
        </div>
      </div>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, id: :student_email, :placeholder => 'email@andrew.cmu.edu' %>
    </div>

    <div class="field">
      <label>Password</label>
      <div class="two fields">
        <div class="field">
          <%= form.password_field :password, :placeholder => 'Password' %>
        </div>
        <div class="field">
          <%= form.password_field :password_confirmation, :placeholder => 'Confirm Password' %>
        </div>
      </div>
    </div>

    <button class="ui fluid submit button sio-blue" type="submit">Save</button>
  <% end %>
</div>
